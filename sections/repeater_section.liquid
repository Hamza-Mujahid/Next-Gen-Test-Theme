<div class="price">
  <div class="container">
    <div class="inner_head">
      <h2>{{ section.settings.main_inner_head }}</h2>
      {{ section.settings.main_inner_description }}
    </div>
    <div class="prices_block">
      {% for block in section.blocks %}
        {% if block.type == 'prices_block' %}
          {% assign block_type = block.settings.block_type %}
          <h1>
            {{ block.settings.price_text }}
          </h1>

          {% for block in section.blocks %}
            {% assign block_sub_type = block.settings.block_sub_type %}
            {% if block.type == 'prices_perk' and block_type == block_sub_type %}
              <ul>
                <li>{{ block.settings.price_span }}</li>
              </ul>
            {% endif %}
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style></style>

{% schema %}
{
  "name": "prices",
  "settings": [
    {
      "type": "text",
      "id": "main_inner_head",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "main_inner_description",
      "label": "description"
    }
  ],
  "blocks": [
    {
      "type": "prices_block",
      "name": "Prices block",
      "settings": [
        {
          "type": "text",
          "id": "block_type",
          "label": "Assign Type"
        },
        {
          "type": "text",
          "id": "price_text",
          "label": "Sub Title"
        }
      ]
    },
    {
      "type": "prices_perk",
      "name": "prices Perk",
      "settings": [
        {
          "type": "text",
          "id": "block_sub_type",
          "label": "Assign Type"
        },
        {
          "type": "text",
          "id": "price_span",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "prices"
    }
  ]
}
{% endschema %}
